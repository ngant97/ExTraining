<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExTraining.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/linearRelativeLayout" />

        <Button
            android:id="@+id/bt_tableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tableLayout" />

        <Button
            android:id="@+id/bt_exUI1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btUI" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>